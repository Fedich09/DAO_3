<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createNewDriver</servlet-name>
        <servlet-class>mate.controller.CreateNewDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createNewDriver</servlet-name>
        <url-pattern>/drivers/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>displayAllDrivers</servlet-name>
        <servlet-class>mate.controller.DisplayAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>displayAllDrivers</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createNewManufacturerController</servlet-name>
        <servlet-class>mate.controller.manufacturers.CreateNewManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createNewManufacturerController</servlet-name>
        <url-pattern>/manufacturers/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createNewCarController</servlet-name>
        <servlet-class>mate.controller.cars.CreateNewCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createNewCarController</servlet-name>
        <url-pattern>/cars/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addingDriverToCarController</servlet-name>
        <servlet-class>mate.controller.cars.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addingDriverToCarController</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>
</web-app>
