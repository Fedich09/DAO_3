<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controllers.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createNewDriver</servlet-name>
        <servlet-class>mate.controllers.CreateNewDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createNewDriver</servlet-name>
        <url-pattern>/driver/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>displayAllDrivers</servlet-name>
        <servlet-class>mate.controllers.DisplayAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>displayAllDrivers</servlet-name>
        <url-pattern>/driver/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createNewManufacturerController</servlet-name>
        <servlet-class>mate.controllers.manufacturers.CreateNewManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createNewManufacturerController</servlet-name>
        <url-pattern>/manufacturer/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createNewCarController</servlet-name>
        <servlet-class>mate.controllers.cars.CreateNewCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createNewCarController</servlet-name>
        <url-pattern>/car/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addingDriverToCarController</servlet-name>
        <servlet-class>mate.controllers.cars.AddingDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addingDriverToCarController</servlet-name>
        <url-pattern>/car/add</url-pattern>
    </servlet-mapping>
</web-app>
